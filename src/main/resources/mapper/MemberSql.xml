<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stay.data.mapper.MemberMapper">
<insert id="insertMember" parameterType="mdto">
		insert into member (id,pass,name,birth,hp,addr_load,addr_detail,photo,likes,e_mail) values(#{id},#{pass},#{name},#{birth},#{hp},#{addr_load},#{addr_detail},#{photo},#{likes},#{e_mail})
	</insert>
	
	<select id="getAllMembers" resultType="mdto">
		select * from member order by id asc
	</select>
	
	<select id="getIdCheck" parameterType="String" resultType="int">
		select count(id) from member where id=#{id}
	</select>
	
	<select id="getEmailCheck" parameterType="String" resultType="int">
		select count(e_mail) from member where e_mail=#{e_mail}
	</select>

	<select id="getCheckPass" parameterType="HashMap" resultType="int">
		select count(*) from member where id=#{id} and pass=#{pass}
	</select>
	
	<select id="getMember" parameterType="String" resultType="mdto">
		select * from member where id=#{id}
	</select>
	
	<update id="updateMember" parameterType="mdto">
		update member set pass=#{pass}, name=#{name}, hp=#{hp}, addr_load=#{addr_load}, addr_detail=#{addr_detail}, e_mail=#{e_mail}
		<if test="photo != null">
			, photo=#{photo}
		</if>
		where id=#{id}
	</update>
	
	<update id="updateImg" parameterType="mdto">
		update room set name=#{name}, hp=#{hp}, #{addr_load}, #{addr_detail}, e_mail=#{e_mail}
		<if test="photo != null">
			, photo=#{photo}
		</if>
		where id=#{id}
	</update>
	
	<delete id="deleteMember" parameterType="String">
		delete from member where id=#{id}
	</delete>
	
	<select id="getName" parameterType="String" resultType="String">
		select name from member where id=#{id}
	</select>
	
	<select id="login" parameterType="HashMap" resultType="int">
		select count(*) from member where id=#{id} and pass=#{pass}
	</select>
	
	<update id="updatelikes" parameterType="String">
		update member set likes=likes+1 where id=#{id}
	</update>
	
	<select id="findId" parameterType="String" resultType="String">
		select id from member where e_mail=#{e_mail}
	</select>
	
	<update id="findPw" parameterType="mdto">
		update member set pass=#{pass} where id=#{id}
	</update>
	
	<resultMap type="stay.data.dto.ResultMapDto" id="resultMap">
		<collection property="roomDto" resultMap="roomMap"></collection>
		<collection property="memDto" resultMap="memMap"></collection>
		<collection property="resDto" resultMap="resMap"></collection>
		<collection property="gcoDto" resultMap="gcoMap"></collection>
	</resultMap>
	
	<select id="getCommentMember" parameterType="String" resultMap="resultMap">
		select * from member a left join (
			select res.room_no, res.no, g.guest_id
			from room r, member m, reservation res, guest_comment g
			where r.no = res.room_no and res.no = g.no and m.id = g.guest_id 
		) b on a.id = b.guest_id where room_no = #{room_no}
	</select>
	
	<!-- join -->
	<!-- room -->
	<resultMap type="stay.data.dto.RoomDto" id="roomMap">
		<id column="no" property="no"/>
		<id column="host_id" property="host_id"/>
		<id column="type" property="type"/>
		<id column="addr_load" property="addr_load"/>
		<id column="addr_detail" property="addr_detail"/>
		<id column="max_per" property="max_per"/>
		<id column="content" property="content"/>
		<id column="name" property="name"/>
		<id column="photos" property="photos"/>
		<id column="price" property="price"/>
		<id column="hosting" property="hosting"/>
	</resultMap>
	
	<!-- member -->
	<resultMap type="stay.data.dto.MemberDto" id="memMap">
		<id column="id" property="id"/>
		<id column="pass" property="pass"/>
		<id column="name" property="name"/>
		<id column="birth" property="birth"/>
		<id column="hp" property="hp"/>
		<id column="addr_load" property="addr_load"/>
		<id column="addr_detail" property="addr_detail"/>
		<id column="photo" property="photo"/>
		<id column="likes" property="likes"/>
		<id column="e_mail" property="e_mail"/>
	</resultMap>
	
	<!-- reservation -->
	<resultMap type="stay.data.dto.ReservationDto" id="resMap">
		<id column="no" property="no"/>
		<id column="guest_id" property="guest_id"/>
		<id column="host_id" property="host_id"/>
		<id column="start_date" property="start_date"/>
		<id column="end_date" property="end_date"/>
		<id column="price" property="price"/>
		<id column="pay_method" property="pay_method"/>
		<id column="card_num" property="card_num"/>
		<id column="account_num" property="account_num"/>
		<id column="pay_date" property="pay_date"/>
		<id column="room_no" property="room_no"/>
	</resultMap>
	
	<!-- guest comment -->
	<resultMap type="stay.data.dto.GuestCommentDto" id="gcoMap">
		<id column="no" property="no"/>
		<id column="guest_id" property="guest_id"/>
		<id column="content" property="content"/>
		<id column="rating" property="rating"/>
		<id column="likes" property="likes"/>
		<id column="write_day" property="write_day"/>
	</resultMap>
</mapper>