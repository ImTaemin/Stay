<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stay.data.mapper.GuestCommentMapper">
	<select id="getRatingAvg" parameterType="String" resultType="Float">
		select avg(rating) from guest_comment
		<if test="no != null">
			where no = #{no}
		</if>
	</select>
	
	<select id="totalComment" parameterType="String" resultType="Integer">
		select count(*) from guest_comment
		<if test="no != null">
			where no = #{no}
		</if>
	</select>
	
	<select id="getAllComment" resultType="gcdto">
		select * from guest_comment
	</select>
	
	<select id="getOneComment" parameterType="HashMap" resultType="gcdto">
		select * from guest_comment where no = #{no} and guest_id = #{guest_id}
	</select>
	
	<insert id="insertGuestCommet" parameterType="gcdto">
		insert into guest_comment values (#{no}, #{guest_id}, #{content}, #{rating}, null)
	</insert>
</mapper>