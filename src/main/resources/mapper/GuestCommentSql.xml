<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="data.mapper.GuestCommentMapper">
	<select id="getRatingAvg" resultType="Float">
		select avg(rating) from guest_comment
		<if test="no != null">
			where no = #{no}
		</if>
	</select>
	
	<select id="totalComment" resultType="Integer">
		select count(*) from guest_comment
		<if test="no != null">
			where no = #{no}
		</if>
	</select>
</mapper>