	<insert id="insertHostComment" parameterType="hcdto">
		insert into host_comment values (#{no}, #{guest_id}, #{host_id}, #{content})
	</insert>
	
	<update id="updateHostComment" parameterType="hcdto">
		update host_comment set content = #{content} where no = #{no}
	</update>
	
	<delete id="deleteHostComment" parameterType="String">
		delete from host_comment where no = #{no}
	</delete>
	
	<select id="getGuestComment" parameterType="HashMap" resultType="gcdto">
		select * from guest_comment where no = #{no} and guest_id = #{guest_id}
	</select>
	
	<select id="getHostComment" parameterType="HashMap" resultType="hcdto">
		select * from host_comment where no = #{no} and host_id = #{host_id}
	</select>
	
	
<!-- 	<select id="countHostComment" parameterType="String" resultType="int"> -->
<!-- 		select count(*) from host_comment where no = #{no} and host_id = #{host_id} -->
<!-- 	</select> -->
	
	<select id="checkComment" parameterType="HashMap" resultType="int">
		select count(*) from host_comment h, guest_comment g where h.no = g.no and h.guest_id = g.guest_id
	</select>
	
	<!-- join -->
	<!-- guest comment -->
	<resultMap type="stay.data.dto.GuestCommentDto" id="gcoMap">
		<id column="no" property="no"/>
		<id column="guest_id" property="guest_id"/>
		<id column="content" property="content"/>
		<id column="rating" property="rating"/>
		<id column="likes" property="likes"/>
		<id column="write_day" property="write_day"/>
	</resultMap>
	
	<!-- host comment -->
	<resultMap type="stay.data.dto.HostCommentDto" id="hcoMap">
		<id column="no" property="no"/>
		<id column="host_id" property="host_id"/>
		<id column="guest_id" property="guest_id"/>
		<id column="content" property="content"/>
	</resultMap>
	
	<!-- comment like -->
	<resultMap type="stay.data.dto.CommentLikeDto" id="likeMap">
		<id column="no" property="no"/>
		<id column="guest_id" property="guest_id"/>
		<id column="id" property="id"/>
	</resultMap>
</mapper>