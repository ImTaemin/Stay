<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stay.data.mapper.WishListMapper">
	<insert id="insertWishList" parameterType="wldto">
		insert into wishlist values (#{room_no}, #{guest_id})
	</insert>
	
	<delete id="deleteWishList" parameterType="HashMap">
		delete from wishlist where room_no = #{roomId} and guest_id = #{guestId}
	</delete>
	
	<select id="allWishList" parameterType="String" resultType="wldto">
		select * from wishlist where guest_id = #{guestId}
	</select>
	
	<select id="totalWish" parameterType="String" resultType="int">
		select count(*) from wishlist where guest_id = #{guestId}
	</select>
	
	<select id="pageWishList" parameterType="HashMap" resultType="wldto">
		select * from wishlist where guest_id = #{guestId} limit #{start}, #{perPage}
	</select>
</mapper>